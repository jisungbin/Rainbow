<resources>

    <style name="Theme.Rainbow" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorSecondary</item>

        <item name="android:navigationBarColor">@color/colorSecondary</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
    </style>

    <style name="Theme.Rainbow.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Rainbow.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Rainbow.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>